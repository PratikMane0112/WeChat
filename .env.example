# Production Environment Variables
NODE_ENV=production
REACT_APP_ENVIRONMENT=production

# API Configuration
REACT_APP_API_BASE_URL=https://api.wechat.com
REACT_APP_WEBSOCKET_URL=wss://api.wechat.com/ws

# Database Configuration
DB_USERNAME=wechat_user
DB_PASSWORD=secure_password_here
DATABASE_URL=jdbc:postgresql://postgres:5432/wechat_production

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_32_chars_minimum

# Email Configuration
MAIL_USERNAME=noreply@wechat.com
MAIL_PASSWORD=gmail_app_password_here

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=dcpesbd8q
CLOUDINARY_UPLOAD_PRESET=wechat
REACT_APP_CLOUDINARY_CLOUD_NAME=dcpesbd8q
REACT_APP_CLOUDINARY_UPLOAD_PRESET=wechat

# ZEGO Configuration
ZEGO_APP_ID=your_zego_app_id_here
ZEGO_SERVER_SECRET=your_zego_server_secret_here
REACT_APP_ZEGO_APP_ID=your_zego_app_id_here
REACT_APP_ZEGO_SERVER_SECRET=your_zego_server_secret_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Docker Configuration
DOCKER_HUB_REPO=pratikmane0112/wechat
BACKEND_IMAGE_TAG=latest
FRONTEND_IMAGE_TAG=latest

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key
